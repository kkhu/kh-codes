.base-modal-view {
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  .base-modal-mask {
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    z-index 0
    background-color $base-modal-mask-bg-color
    opacity 0.3
  }
  .content-wp {
    min-width 5rem
    min-height 5rem
    position absolute
    left 50%
    top 50%
    z-index 2
    transform translate(-50%, -50%)
  }
  .icon-cross {
    width 0.15rem
    height 0.15rem
    display flex
    justify-content center
    align-items center
    position absolute
    right 0.1rem
    top 0.1rem
    line() {
      width 100%
      position absolute
      content ''
      display inline-block
      border-top solid 0.02rem $base-modal-btn-close-bg-color
    }
    &::before {
      line()
      transform rotate(45deg)
    }
    &::after {
      line()
      transform rotate(-45deg)
    }
  }
}
